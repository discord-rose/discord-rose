{
	"source": {
		"includePattern": ".+\\.ts(doc|x)?$"
	},
	"plugins": [
    "plugins/markdown",
		"node_modules/jsdoc-babel"
  ],
	"babel": {
		"extensions": ["ts"],
		"babelrc": false,
		"presets": [
			["@babel/preset-env", { "targets": { "node": true } }],
			"@babel/preset-typescript"
    ],
    "plugins": [
      "babel-plugin-replace-ts-export-assignment",
      ["@babel/plugin-transform-typescript", {
        "allowNamespaces": true
      }]
    ]
	}
}